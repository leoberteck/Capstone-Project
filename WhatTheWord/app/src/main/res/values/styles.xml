<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="WtwTitle.Large" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="TextAppearance.Wtw" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="TextAppearance.Wtw.Small" parent="TextAppearance.Wtw">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TextAppearance.Wtw.Medium" parent="TextAppearance.Wtw">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Wtw.Large" parent="TextAppearance.Wtw">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextAppearance.Wtw.Header.Medium" parent="TextAppearance.Wtw.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.Wtw.Header.Large" parent="TextAppearance.Wtw.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>
